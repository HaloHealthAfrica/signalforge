{
  "name": "tradeloop",
  "version": "1.0.0",
  "description": "Advanced trading system with AI-powered signals",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "backtest": "ts-node src/index.ts backtest",
    "live": "ts-node src/index.ts live",
    "test": "jest",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "ui:dev": "cd frontend && npm run dev",
    "ui:build": "cd frontend && npm run build",
    "ui:preview": "cd frontend && npm run preview",
    "render:build": "npm ci && npm run build && npx prisma generate",
    "render:deploy": "npx prisma migrate deploy",
    "build:render": "tsc && npx prisma generate",
    "postinstall": "npx prisma generate"
  },
  "keywords": ["trading", "ai", "signals", "backtesting", "portfolio"],
  "author": "TradeLoop Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.11.0",
    "ws": "^8.18.3",
    "dotenv": "^16.6.1",
    "commander": "^11.1.0",
    "winston": "^3.17.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "typescript": "^5.9.2",
    "prisma": "^5.22.0",
    "@types/node": "^20.19.11",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/ws": "^8.18.1"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.1",
    "@types/jest": "^29.5.14"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
