# TradeLoop Frontend Environment Configuration
# Copy this file to .env.local and update the values

# API Configuration
VITE_API_URL=http://localhost:3000

# Application Settings
VITE_APP_TITLE=TradeLoop
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_WEBSOCKET=true
VITE_ENABLE_BACKTEST=true
VITE_ENABLE_PORTFOLIO_SYNC=true

# Polling Intervals (milliseconds)
VITE_MARKET_DATA_INTERVAL=3000
VITE_SIGNALS_INTERVAL=5000
VITE_PORTFOLIO_INTERVAL=10000

# Error Reporting (Production)
VITE_SENTRY_DSN=
VITE_ENABLE_ERROR_TRACKING=false

# Analytics (Optional)
VITE_GA_TRACKING_ID=
VITE_ENABLE_ANALYTICS=false